{
  "name": "us-cycle-topics",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "migrate": "tsx db/migrate.ts",
    "bootstrap": "tsx db/bootstrap.ts",
    "pg:up": "sudo docker compose up -d postgres",
    "pg:down": "sudo docker compose down",
    "producer": "tsx apps/producer/src/cli.ts",
    "eval:run": "tsx apps/producer/src/eval-runner.ts",
    "seed:sample": "tsx apps/producer/src/sample-seed.ts",
    "renderer": "tsx apps/renderer/src/cli.ts",
    "pipeline": "tsx apps/scheduler/src/run-once.ts",
    "scheduler": "tsx apps/scheduler/src/daemon.ts",
    "review": "tsx apps/scheduler/src/review-cli.ts",
    "preflight": "tsx apps/scheduler/src/preflight-cli.ts",
    "publish:dry-run": "RSYNC_DRY_RUN=true tsx apps/scheduler/src/run-once.ts --mode=incremental",
    "doctor": "tsx apps/scheduler/src/doctor.ts",
    "smoke": "bash scripts/smoke.sh",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@genkit-ai/google-genai": "^1.25.0",
    "@genkit-ai/compat-oai": "^1.25.0",
    "genkit": "^1.25.0",
    "node-cron": "^4.2.1",
    "dotenv": "^16.4.7",
    "pg": "^8.16.3",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "typescript": "^5.9.2",
    "tsx": "^4.20.5"
  }
}
