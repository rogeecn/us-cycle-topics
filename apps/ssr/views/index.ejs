<main class="main list" role="main">
	<header class="main__header">
		<h1 class="main__title">Posts</h1>
	</header>
	<% articles.forEach(article => { %>
		<article class="list__item post">
			<header class="list__header">
				<h2 class="list__title post__title">
					<a href="/posts/<%= article.slug %>" rel="bookmark">
						<%= article.title %>
					</a>
				</h2>
				<div class="list__meta meta">
					<div class="meta__item-datetime meta__item">
						<svg class="meta__icon icon icon-time" width="16" height="14" viewBox="0 0 30 28"><path d="M15 0C7 0 1 6 1 14s6 14 14 14 14-6 14-14S23 0 15 0zm0 25C9 25 4 20 4 14S9 3 15 3s11 5 11 11-5 11-11 11zm1-18h-2v8.4l6.8 4.4L22 18l-6-3.8V7z"/></svg>
						<time class="meta__text" datetime="<%= article.lastmod.toISOString() %>"><%= article.lastmod.toDateString() %></time>
					</div>
				</div>
			</header>
			<div class="content list__excerpt post__content clearfix">
				<%= article.description %>
			</div>
		</article>
	<% }) %>
	<% if (hasPrevPage || hasNextPage) { %>
		<nav class="pager" role="navigation">
			<% if (hasPrevPage) { %>
				<a class="pager__item pager__item--prev btn" href="/?page=<%= page - 1 %>">Prev</a>
			<% } %>
			<% if (hasNextPage) { %>
				<a class="pager__item pager__item--next btn" href="/?page=<%= page + 1 %>">Next</a>
			<% } %>
		</nav>
	<% } %>
</main>
